<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lnlIButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF000000"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
          
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:visibility="invisible"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/icon" />

        <ImageButton
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="2dp"
            android:src="@drawable/gplay" />

        <ImageButton
            android:id="@+id/ibOurProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="2dp"
            android:src="@drawable/icon_share" />

        <ImageButton
            android:id="@+id/ibBanglaDua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="2dp"
            android:src="@drawable/icon_contactus" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="#ffffff" >

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1982840936615923/9609534095" >
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView1"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginTop="7dp"
            android:layout_weight="0.06"
            android:background="@drawable/shape"
            android:completionThreshold="1"
            android:ems="10"
            android:hint="Type your place..."
            android:padding="10dp"
            android:textColor="#000000" >

            <requestFocus />
        </AutoCompleteTextView>

        <ImageButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="2dp"
            android:src="@drawable/search" />
    </LinearLayout>

    <ListView
        android:id="@+id/typeListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bc"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>