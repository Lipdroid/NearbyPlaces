<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--before it was 500px-->
        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:src="@drawable/airport" />

            <TextView
                android:id="@+id/item_txtMake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_icon"
                android:padding="5dp"
                android:textSize="60px"
                android:singleLine="true"
                android:tag="60"
                android:text="Make Shown Here"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/main_dark" />

            <TextView
                android:id="@+id/item_txtYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/item_txtMake"
                android:layout_below="@+id/item_txtMake"
                android:paddingLeft="5dp"
                android:textSize="35px"
                android:tag="35"
                android:text="Press to see on map"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/common_gray" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>